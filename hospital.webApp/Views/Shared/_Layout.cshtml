<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Prueba.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav id="navegation-bar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark fw-light">
        <div class="container">

            @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "image-link" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Sobre nosotros", "About", "Home", new { area = "" }, new { @class = "nav-link nav-font-color fs-4" })</li>
                    <li>@Html.ActionLink("Contactarnos", "Contact", "Home", new { area = "" }, new { @class = "nav-link nav-font-color fs-4" })</li>
                    <li>@Html.ActionLink("Solicitar cita", "Create", "Citas", new { area = "" }, new { @class = "nav-link nav-font-color fs-4" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content top-together wrapper">
        @RenderBody()
        <hr />
            <footer class="text-center ">


                <div class="row">
                    <section class="col-md-4" aria-labelledby="gettingStartedTitle">
                        <h2 id="gettingStartedTitle">Empezando</h2>
                        @Html.ActionLink("Regístrate para recibir gratuitamente boletines informativos electrónicos", "Register", "Account", new { area = "" }, new { @class = "btn btn-outline-dark" })

                    </section>

                    <section class="col-md-4" aria-labelledby="librariesTitle">
                        <h2 id="librariesTitle">Contactanos</h2>
                        @Html.ActionLink("Comunicate con nosotros por nuestra via telefonica o email", "Contact", "Home", new { area = "" }, new { @class = "btn btn-outline-dark" })

                    </section>
                    <section class="col-md-4" aria-labelledby="hostingTitle">
                        <h2 id="hostingTitle">Conocenos</h2>
                        @Html.ActionLink("Conoce sobre nosotros, el hospital reconocido como #1 de RD", "About", "Home", new { area = "" }, new { @class = "btn btn-outline-dark" })

                    </section>
                </div>

                <div class="row">
                    <section class="col-md-4" aria-labelledby="gettingStartedTitle">
                        <h2 id="gettingStartedTitle">Asegura tu salud</h2>
                        @Html.ActionLink("Pide una cita con nosotros para mejorar tu mañana", "Create", "Citas", new { area = "" }, new { @class = "btn btn-outline-dark" })
                    </section>
                    <section class="col-md-4" aria-labelledby="librariesTitle">
                        <h2 id="librariesTitle">Recomiendanos</h2>
                        @Html.ActionLink("Haz pasar la voz para que todos estemos mejor", "Index", "Home", new { area = "" }, new { @class = "btn btn-outline-dark" })

                    </section>
                    <section class="col-md-4" aria-labelledby="hostingTitle">
                        <h2 id="hostingTitle">Contraseña para recordar</h2>
                        @Html.ActionLink("Cambia tu contraseña por una que puedas recordar", "ChangePassword", "Manage", new { area = "" }, new { @class = "btn btn-outline-dark" })

                    </section>
                </div>



                <img src="~/Resources/HOSPITAL INTECIANO.2 LOGO.png" class="img-footer" />
                <p>&copy; @DateTime.Now.Year - Hospitec · Tu salud · Nuestra mision</p>
            </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
