<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Prueba.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav id="navegation-bar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark fw-light">
        <div class="container">

            @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "image-link" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Sobre nosotros", "About", "Home", new { area = "" }, new { @class = "nav-link nav-font-color fs-4" })</li>
                    <li>@Html.ActionLink("Contactarnos", "Contact", "Home", new { area = "" }, new { @class = "nav-link nav-font-color fs-4" })</li>
                    <li>@Html.ActionLink("Solicitar cita", "Create", "Citas", new { area = "" }, new { @class = "nav-link nav-font-color fs-4" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content top-together">
        @RenderBody()
    </div>
        <hr />
        <footer class="text-center">

            <div class="row">
                <div class="col">

                    <section class="col-md-10 mx-auto p-5" aria-labelledby="gettingStartedTitle">
                        <img src="~/Resources/HOSPITAL INTECIANO.2 LOGO.png" class="img-footer text-center" />
                    </section>

                    
                </div>



                <div class="col mx-auto p-5">
                    <section class="col-md-10 align-self-center" aria-labelledby="gettingStartedTitle">
                        <!--<h2 id="gettingStartedTitle">Empezando</h2>-->
                        @Html.ActionLink("Empezando", "Register", "Account", new { area = "" }, new { @class = "btn nav-font-color fs-4" })

                    </section>

                    <section class="col-md-10 align-self-center" aria-labelledby="librariesTitle">
                        <!--<h2 id="librariesTitle">Contactanos</h2>-->
                        @Html.ActionLink("Contactanos", "Contact", "Home", new { area = "" }, new { @class = "btn nav-font-color fs-4" })

                    </section>
                    <section class="col-md-10 align-self-center" aria-labelledby="hostingTitle">
                        <!--<h2 id="hostingTitle">Conocenos</h2>-->
                        @Html.ActionLink("Conocenos", "About", "Home", new { area = "" }, new { @class = "btn nav-font-color fs-4" })

                    </section>
                </div>



                    <div class="col mx-auto p-5">
                        <section class="col-md-10" aria-labelledby="gettingStartedTitle">
                            <!--<h2 id="gettingStartedTitle">Asegura tu salud</h2>-->
                            @Html.ActionLink("Asegura tu salud", "Create", "Citas", new { area = "" }, new { @class = "btn nav-font-color fs-4" })
                        </section>

                        <section class="col-md-10" aria-labelledby="librariesTitle">
                            <!--<h2 id="librariesTitle">Recomiendanos</h2>-->
                            @Html.ActionLink("Recomiendanos", "Index", "Home", new { area = "" }, new { @class = "btn nav-font-color fs-4" })
                        </section>

                        <section class="col-md-10 aria-labelledby="hostingTitle">
                            <!--<h2 id="hostingTitle">Contraseña para recordar</h2>-->
                            @Html.ActionLink("Contraseña para recordar", "ChangePassword", "Manage", new { area = "" }, new { @class = "btn nav-font-color fs-4" })
                        </section>


                    </div>
                </div>




                <p>&copy; @DateTime.Now.Year - Hospitec · Tu salud · Nuestra mision</p>
</footer>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
